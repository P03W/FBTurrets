{
  "schemaVersion": 1,
  "id": "fbturrets",
  "version": "${version}",

  "name": "fbturrets",
  "description": "Adds turrets for fabric",
  "authors": [
    "TheoreticallyUseful"
  ],
  "contact": {
    "homepage": "https://github.com/P03W/FBTurrets",
    "issues": "https://github.com/P03W/FBTurrets/issues"
  },

  "license": "CC0-1.0",
  "icon": "assets/fbturrets/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "mc.fbturrets.main.FBTurrets"
      }
    ],
    "client": [
      {
        "adapter": "kotlin",
        "value": "mc.fbturrets.main.FBTurretsClient"
      }
    ]
  },
  "mixins": [
    "fbturrets.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.7.4",
    "fabric": "*",
    "minecraft": ">1.16-",
    "fabric-language-kotlin": ">=1.3.50"
  },
  "suggests": {
    "flamingo": "*"
  }
}
